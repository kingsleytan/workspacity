<div class="new">

    <div class="partial-review">
        <h1 style="color: black">Create review</h1>
    </div>

    <div class="form-group">
        <div id="preview-image">
            <% if review.image? %>
            <%= image_tag review.image, class: "img-settings img-responsive center-block" %>
            <% end %>
        </div>
    </div>

    <div class="form-group">

        <%= form_for(review, url: package_review_path(review.package, review), method: :review, authenticity_token: true, remote: true, html: { id: "review-create-form", multipart: true }) do |f| %>

        <div class="form-group">
            <%= f.file_field :image, id: "review_image_field", class: 'form-control image-uploader' %>
        </div>

        <h4>
            <%= f.label :text_field, "Description" %>
        </h4>
        <%= f.text_field :body, id: "review_body_field", class: 'form-control' %>

        <div class="font-feature-new text-center">
            <%= f.submit "Create review", class: "btn btn-success btn-lg" %>
        </div>
        <% end %>
    </div>
</div>
