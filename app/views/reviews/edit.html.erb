<div class="edit">

  <div class="form-edit" id="review-update">
    <%= form_for(review, url: package_review__path(package, review), authenticity_token: true, remote: true, html: { id: "review-update-form", multipart: true  }) do |f| %>

    <div class="form-group" id="preview-image">
      <% if review.image? %>
      <%= image_tag review.image, class: "img-settings img-responsive center-block" %>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.file_field :image, id: "review_image_field", class: 'form-control image-uploader' %>
    </div>

    <div class="form-group">
      <h4> <%= f.label :text_field, "Body" %> </h4>
      <%= f.text_field :body, id: "review_body_field", class: 'form-control' %>
    </div>

    <div class="font-feature-edit text-center" id="review-update-button">
      <%= f.submit "Update review", class: "btn btn-success btn-lg" %>
    </div>
    <% end %>
  </div>

</div>
