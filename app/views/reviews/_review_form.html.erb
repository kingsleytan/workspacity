<%= form_for(review, url: package_reviews_path(package), method: :post, authenticity_token: true, remote: true, html: { id: "review-create-form", multipart: true }) do |f| %>
  <h2 class="text-center">
    Add new review:
  </h2>

  <div class="form-group">
    <h4 class="text-center"> Post Image </h4>
    <div id="preview-image">
      <% if review.image? %>
        <%= image_tag review.image, class: "img-settings img-responsive center-block" %>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.file_field :image, id: "review_image_field", class: 'form-control image-uploader' %>
  </div>

  <div class="form-group">
    <h4> <%= f.label :text_field, "Body" %> </h4>
    <%= f.text_field :body, id: "review_body_field", class: 'form-control' %>
  </div>

  <div class="form-group text-center">
    <%= f.submit "Post Review", class: "btn btn-success btn-lg" %>
  </div>
<% end %>
