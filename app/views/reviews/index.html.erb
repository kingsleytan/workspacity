<div class="reviews-index" data-id="<%= @review.id %>">
  <div class="background">
    <h1 style="color: white; font-size: 50px">reviews</h1>
  </div>

  <div style="margin: 30px" class="form-group text-center">
    <%= link_to "Back to all packages", packages_path, class: "btn btn-info btn-lg"%>
    <%= link_to "Back to all reviews", package_reviews_path, class: "btn btn-info btn-lg"%>
    <%= link_to "Delete review", package_review_path(@package,@review), method: :delete, class: "btn btn-danger btn-lg", data: { confirm: "Delete?"} %>
  </div>


  <div style="margin: 5px" class="all-reviews" id="reviews">
    <% @reviews.each do |review| %>
    <%= render partial: "review", locals: { review: review, review: @review, package: @package, extra_class: '' } %>
    <% end %>
  </div>

  <% if current_user %>
  <div style="margin: 5px" class="new-review" id="reviews-form-container">
    <%= render partial: "create_form", locals: { review: @review, review: @review } %>
  </div>
  <% end %>


</div>
