<div class="users">
  <div class="user-holder">
        <%= form_for(@user, url: user_path, html: { id: "user-create-form", multipart: true }) do |f| %>
          <h1 class="text-center">
            Update User
          </h1>

          <div class="form-group">
            <h4 class="text-center"> Image </h4>
            <div id="preview-image">
              <% if @user.image? %>
                <%= image_tag @user.image, class: "img-settings img-responsive center-block" %>
              <% end %>
            </div>
          </div>

          <div class="form-group">
            <%= f.file_field :image, id: "user_image_field", class: 'form-control image-uploader' %>
          </div>

          <div class="form-group">
            <h4> <%= f.label :title_field, "Username" %> </h4>
            <%= f.text_field :username, id: "user_name_field", class: 'form-control' %>
          </div>

          <div class="form-group">
            <h4> <%= f.label :title_field, "Email" %> </h4>
            <%= f.text_field :email, id: "user_email_field", class: 'form-control' %>
          </div>

          <div class="form-group">
            <h4> <%= f.label :password_field, "Password" %> </h4>
            <%= f.password_field :password, id: "user_password_field", class: 'form-control' %>
          </div>

          <div class="form-group text-center">
            <%= f.submit "Update user", class: "btn btn-success btn-lg" %>
          </div>
        <% end %>
    </div>
</div>
