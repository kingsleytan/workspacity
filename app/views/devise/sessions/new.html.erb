<div class="devise">

    <div class="title">
      <h2>Log in</h2>
    </div>

    <div class="form-container">


      <%= form_for(resource, as: resource_name, url: user_session_path) do |f| %>

      <div class="field">
        <%= f.label :email, class: 'form-title' %><br />
        <%= f.email_field :email, autofocus: true,  placeholder: "Your email...", class: 'form-fill' %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'form-title' %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password...", class: 'form-fill'%>
      </div>

      <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: 'form-small' %>
      </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: 'button' %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>

  </div>
</div>
